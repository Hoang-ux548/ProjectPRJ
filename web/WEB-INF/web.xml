<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignUpController</servlet-name>
        <servlet-class>controllers.SignUpController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountListController</servlet-name>
        <servlet-class>controllers.AccountListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAccountDetails</servlet-name>
        <servlet-class>controllers.ViewAccountDetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditAccountController</servlet-name>
        <servlet-class>controllers.EditAccountController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteAccount</servlet-name>
        <servlet-class>controllers.DeleteAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserProfileController</servlet-name>
        <servlet-class>controllers.UserProfileController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserInfoController</servlet-name>
        <servlet-class>controllers.UserInfoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewProfileDetails</servlet-name>
        <servlet-class>controllers.ViewProfileDetails</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignUpController</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountListController</servlet-name>
        <url-pattern>/accountList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAccountDetails</servlet-name>
        <url-pattern>/viewAccountDetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditAccountController</servlet-name>
        <url-pattern>/updateAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteAccount</servlet-name>
        <url-pattern>/deleteAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserProfileController</servlet-name>
        <url-pattern>/userProfile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserInfoController</servlet-name>
        <url-pattern>/signUpInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewProfileDetails</servlet-name>
        <url-pattern>/viewProfileDetails</url-pattern>
    </servlet-mapping>
</web-app>
